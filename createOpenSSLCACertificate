##################### FIRST LINE
# ---------------------------
#!/bin/bash
# ---------------------------
#
# |--------------------------------------------------------------|
# | The script thank you for Notos (notos.korsan@gmail.com)      |
# |--------------------------------------------------------------|
# | The script was further developed Tiby08 (tiby0108@gmail.com) |
# |--------------------------------------------------------------|
#
#
#

cd /etc/bestbox-seedbox/
rm -r /etc/bestbox-seedbox/ssl/CA
mkdir -p /etc/bestbox-seedbox/ssl/CA/newcerts
mkdir -p /etc/bestbox-seedbox/ssl/CA/private
cd /etc/bestbox-seedbox/ssl/CA

echo '01' > serial  && touch index.txt
cp /etc/bestbox-seedbox/root.ca.cacert.conf.template /etc/bestbox-seedbox/ssl/CA/caconfig.cnf
perl -pi -e "s/<username>/$NEWUSER1/g" /etc/bestbox-seedbox/ssl/CA/caconfig.cnf
perl -pi -e "s/<servername>/$IPADDRESS1/g" /etc/bestbox-seedbox/ssl/CA/caconfig.cnf

openssl req -new -x509 -extensions v3_ca -keyout private/cakey.pem -passout pass:$CERTPASS1 -out cacert.pem -days 3650 -config /etc/bestbox-seedbox/ssl/CA/caconfig.cnf
openssl req -new -nodes -out /etc/bestbox-seedbox/ssl/CA/req.pem -passout pass:$CERTPASS1 -config /etc/bestbox-seedbox/ssl/CA/caconfig.cnf
openssl ca -batch -out /etc/bestbox-seedbox/ssl/CA/cert.pem -config /etc/bestbox-seedbox/ssl/CA/caconfig.cnf -passin pass:$CERTPASS1 -infiles /etc/bestbox-seedbox/ssl/CA/req.pem
mv /etc/bestbox-seedbox/ssl/CA/cert.pem /etc/bestbox-seedbox/ssl/CA/tmp.pem
openssl x509 -in /etc/bestbox-seedbox/ssl/CA/tmp.pem -out /etc/bestbox-seedbox/ssl/CA/cert.pem
cat /etc/bestbox-seedbox/ssl/CA/key.pem /etc/bestbox-seedbox/ssl/CA/cert.pem > /etc/bestbox-seedbox/ssl/CA/key-cert.pem

cp /etc/bestbox-seedbox/ssl/CA/cacert.pem /etc/bestbox-seedbox/ssl
cp /etc/bestbox-seedbox/ssl/CA/cert.pem /etc/bestbox-seedbox/ssl
cp /etc/bestbox-seedbox/ssl/CA/key-cert.pem /etc/bestbox-seedbox/ssl
cp /etc/bestbox-seedbox/ssl/CA/key.pem /etc/bestbox-seedbox/ssl
cp /etc/bestbox-seedbox/ssl/CA/private/cakey.pem /etc/bestbox-seedbox/ssl
cp /etc/bestbox-seedbox/ssl/CA/req.pem /etc/bestbox-seedbox/ssl

bash /etc/bestbox-seedbox/createOpenSSLServiceCertificate sabnzbd

chmod 600 /etc/bestbox-seedbox/ssl/*
chmod 644 /etc/bestbox-seedbox/ssl/cert.pem
chmod 644 /etc/bestbox-seedbox/ssl/key.pem

##################### LAST LINE ###########
